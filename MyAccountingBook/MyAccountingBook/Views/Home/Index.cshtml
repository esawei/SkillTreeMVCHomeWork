@using MyAccountingBook.ViewModels.Home;
@model MyAccountingBook.ViewModels.Home.AccountingViewModel

<div class="well">
    @using (Html.BeginForm("Index", "Home", FormMethod.Post, new { @class = "form-horizontal" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(x => x.Category, new { @class = "col-sm-2 control-label" })
            <div class="col-sm-10">
                @Html.DropDownList("Category",
                        EnumHelper.GetSelectList(typeof(AcctountingCategory)),
                        "請選擇",
                        new { @class= "form-control" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(x=>x.Money, new { @class= "col-sm-2 control-label" })
            <div class="col-sm-10">
                @Html.TextBoxFor(x=>x.Money, new { @class= "form-control", @placeholder= "金額" })
            </div>
        </div>
            <div class="form-group">
                @Html.LabelFor(x => x.Date, new { @class = "col-sm-2 control-label" })
                <div class="col-sm-10">
                    @Html.TextBoxFor(x => x.Date, new { @class = "form-control", @placeholder = "日期" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(x => x.Description, new { @class = "col-sm-2 control-label" })
                <div class="col-sm-10">
                    @Html.TextAreaFor(x=>x.Description, new { @class= "form-control", @placeholder = "備註" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-8 col-sm-4">
                    <button type="submit" class="btn btn-default">送出</button>
                </div>
            </div>
    }
</div>

@Html.Action("AccountingList")

